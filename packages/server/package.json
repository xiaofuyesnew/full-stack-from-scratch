{
  "name": "full-stack-from-scratch-server",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "npx unbuild && npx dotenv -e .env -- cross-env NODE_ENV=production node ./build/index.mjs",
    "dev": "npx dotenv -e .env -- cross-env NODE_ENV=development nodemon ./src/index.js",
    "build": "npx unbuild"
  },
  "dependencies": {
    "koa": "^2.14.2",
    "koa-sslify": "^5.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "nodemon": "^3.0.1",
    "unbuild": "^2.0.0"
  }
}
